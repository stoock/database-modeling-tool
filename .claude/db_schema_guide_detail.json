  "description_guide": {
    "table": {
      "rule": "상세 설명을 한글로 명확하게 입력. 빈 값/테이블명 그대로 복사 금지.",
      "example": [
        {
          "table": "EJOP_ORDER_COMPLETE_LOG",
          "desc": "주문 체결 고도화 주문 데이터 완료 처리 결과"
        },
        {
          "table": "STTL_BUYER_TAX_RECEIPT_QOO10_TICKET_SERVICE_FEE",
          "desc": "티켓 Qoo10 서비스 수수료 영수증"
        }
      ]
    },
    "column": {
      "rule": "컬럼 한글명 + 상세 설명(필요시), '||'(shift+\\)로 구분. 컬럼명을 그대로 쓰거나, 설명 없이 입력 금지.",
      "example": [
        {
          "column": "PACK_NO",
          "desc": "장바구니번호"
        },
        {
          "column": "GD_SELL_PRICE",
          "desc": "상품판매가격 || 실제로 판매되는 가격(등급 관련 정보)"
        },
        {
          "column": "RESULT_CODE",
          "desc": "처리결과코드 || 0:성공, -100:실패(사유1), -200:실패(사유2)"
        },
        {
          "column": "ORDER_PROCESS_TYPE",
          "desc": "주문처리타입 || K:재고선점, Z:재배송전 프로세스"
        }
      ]
    },
    "sql_example": [
      "-- 테이블 설명",
      "EXEC sys.sp_addextendedproperty @name=N'MS_Description', @value=N'주문 체결 고도화 주문 데이터 완료 처리 결과', @level0type=N'SCHEMA', @level0name=N'dbo', @level1type=N'TABLE', @level1name=N'ejop_order_complete_log';",
      "-- 컬럼 설명",
      "EXEC sys.sp_addextendedproperty @name=N'MS_Description', @value=N'장바구니번호', @level0type=N'SCHEMA', @level0name=N'dbo', @level1type=N'TABLE', @level1name=N'ejop_order_complete_log', @level2type=N'COLUMN', @level2name=N'pack_no';",
      "-- 컬럼 상세 설명",
      "EXEC sys.sp_addextendedproperty @name=N'MS_Description', @value=N'처리결과코드 || 0:성공, -100:실패(사유1), -200:실패(사유2)', @level0type=N'SCHEMA', @level0name=N'dbo', @level1type=N'TABLE', @level1name=N'example_table', @level2type=N'COLUMN', @level2name=N'result_code';"
    ]
  },
